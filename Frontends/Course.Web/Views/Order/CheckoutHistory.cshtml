@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Payment History</h5>
                @if (Model.Any())
                {

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Payment No</th>
                                <th>Purchase Date</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.CreatedDate.ToString("dd.MM.yyyy hh:ss")</td>
                                    <td>
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Course Name</th>
                                                    <th>Course Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var orderItem in order.OrderItems)
                                                {
                                                    <tr>
                                                        <td>
                                                            @orderItem.ProductName
                                                        </td>
                                                        <td>
                                                            @orderItem.Price ₺
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        You do not have any courses purchased
                    </div>
                }
            </div>
        </div>
    </div>
</div>