@{
    ViewData["Title"] = "Detail";
}
@model CourseViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <img src="@Model.StockPictureUrl" alt="..." class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    @Model.Description
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"><span class="font-weight-bold">Price: </span> @Model.Price₺</h4>
                <button href="#" class="btn-primary btn-primary w-100">Add Basket</button>
            </div>
        </div>
    </div>
</div>
