@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}
@model List<CourseViewModel>

<h2>Courses</h2>

<hr />

@if (Model.Any())
{
    foreach (var course in Model)
    {
        count++;

        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols row-cols-md-3 g-4 mb-2'>")
        }

        <div class="col">
            <div class="card">
                <img src="@course.StockPictureUrl" class="card-img-top" alt="..." />
                <div class="card-body">
                    <h5 class="card-title">@course.Name</h5>
                    <p class="card-text">@course.ShortDescription</p>
                    <h4 class="text-primary w-100"><span class="font-weight-bold">Price:</span> @course.Price₺</h4>
                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@course.Id" class="btn btn-dark w-100">Details</a>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}